@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Color="Color.Inherit" Style="background-color: #4682b4" Fixed="true">
        <!-- Flexbox container with logo aligned left, links centered, and social icons right -->
        <div style="display: flex; width: 100%; align-items: center; justify-content: space-between; padding: 0 16px;">
            <!-- Logo Section: Aligned to the Left -->
            <div style="display: flex; align-items: center;">
                <img src="img/logo.png" alt="Clínica da Mulher" style="height: 60px;" />
            </div>

            <!-- Anchor Links in the Center -->
            <div style="display: flex; gap: 30px; justify-content: center; align-items: center; flex-grow: 1;">
                <MudText Typo="Typo.h6">
                    <a href="#services" style="color: inherit; text-decoration: none;">Services</a>
                </MudText>
                <MudText Typo="Typo.h6">
                    <a href="#about" style="color: inherit; text-decoration: none;">About</a>
                </MudText>
                <MudText Typo="Typo.h6">
                    <a href="#contact" style="color: inherit; text-decoration: none;">Contact</a>
                </MudText>
                <MudText Typo="Typo.h6">
                    <a href="#team" style="color: inherit; text-decoration: none;">Team</a>
                </MudText>
            </div>

            <!-- Social Media Icons: Aligned to the Right -->
            <div style="display: flex; gap: 8px;">
                <a href="https://wa.me/1234567890" target="_blank" style="color: inherit;">
                    <MudIconButton Icon="@Icons.Custom.Brands.WhatsApp" Color="Color.Inherit" />
                </a>
                <a href="https://www.instagram.com/yourprofile" target="_blank" style="color: inherit;">
                    <MudIconButton Icon="@Icons.Custom.Brands.Instagram" Color="Color.Inherit" />
                </a>
                <a href="https://www.instagram.com/yourprofile" target="_blank" style="color: inherit;">
                    <MudIconButton Icon="@Icons.Custom.Brands.Facebook" Color="Color.Inherit" />
                </a>
                <a href="https://www.linkedin.com/in/yourprofile" target="_blank" style="color: inherit;">
                    <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Inherit" />
                </a>
            </div>
        </div>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>